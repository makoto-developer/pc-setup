# 環境変数
export PATH=$HOME/.nodebrew/current/bin:$PATH
#export PATH=/usr/local/go/bin:$HOME/go/bin:$PATH

# zsh history

## 履歴ファイルの保存先
export HISTFILE=${HOME}/.zsh_history
## メモリに保存される履歴の件数
export HISTSIZE=1000
## 履歴ファイルに保存される履歴の件数
export SAVEHIST=1000000
## 開始と終了を記録
setopt EXTENDED_HISTORY


